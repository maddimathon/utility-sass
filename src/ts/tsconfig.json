{
    "extends": "@maddimathon/build-utilities/tsconfig",
    "include": [
        "../../src/ts/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "../../",
        "declaration": true,
        "declarationMap": true,
        "lib": [ 
            "DOM",
            "ES2022"
        ],
        "skipLibCheck": true,
        "outDir": "../../dist/ts/",
        "sourceMap": true
    }
}