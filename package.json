{
    "name": "@maddimathon/utility-sass",
    "version": "0.1.0-alpha",

    "author": "Maddi Mathon (www.maddimathon.com)",
    "description": "Sass (scss) utilities to use in a variety of projects with an opinionated, optionally configurable design token system.",
    
    "keywords": [
        "sass-library",
        "scss-library",
        "sass-utilities",
        "scss-utilities",
        "sass-utility",
        "scss-utility",
        "npm-package",
        "npm-package-sass",
        "npm-package-scss"
    ],

    "homepage": "https://maddimathon.github.io/utility-sass",
    "license": "MIT",

    "repository": {
        "type": "git",
        "url": "https://github.com/maddimathon/utility-sass.git"
    },
    
    "engines": {
        "node": ">=22"
    },

    "type": "module",

    "files": [
        "./dist/**/*",
        "./LICENSE.md",
        "./package.json",
        "./README.md"
    ],

    "bugs": {
        "url": "https://github.com/maddimathon/utility-sass/issues"
    },

    "main": "./dist/scss/index.scss",

    "bin": {
        "utility-sass": "./dist/ts/bin/index.js"
    },

    "exports": {

        ".": {
            "sass": "./dist/scss/lib/index.scss",
            "types": "./dist/ts/index.d.ts",
            "default": "./dist/ts/index.js"
        },

        "./config": {
            "sass": "./src/scss/config/index.scss"
        },
        "./config.scss": {
            "sass": "./src/scss/config/index.scss"
        },
        "./config/*.scss": [
            "./dist/scss/config/*.scss",
            "./dist/scss/config/_*.scss",
            "./dist/scss/config/*/index.scss",
            "./dist/scss/config/*/_index.scss",
            "./dist/scss/config/_*/index.scss",
            "./dist/scss/config/_*/_index.scss"
        ],

        "./notice": {
            "sass": "./src/scss/_notice.scss"
        },
        "./notice.scss": {
            "sass": "./src/scss/_notice.scss"
        },
        
        "./templates/*.scss": [
            "./dist/scss/templates/*.scss",
            "./dist/scss/templates/_*.scss",
            "./dist/scss/templates/*/index.scss",
            "./dist/scss/templates/*/_index.scss",
            "./dist/scss/templates/_*/index.scss",
            "./dist/scss/templates/_*/_index.scss"
        ],

        "./tokens": {
            "sass": "./src/scss/tokens/index.scss"
        },
        "./tokens.scss": {
            "sass": "./src/scss/tokens/index.scss"
        },
        "./tokens/*.scss": [
            "./dist/scss/tokens/*.scss",
            "./dist/scss/tokens/_*.scss",
            "./dist/scss/tokens/*/index.scss",
            "./dist/scss/tokens/*/_index.scss",
            "./dist/scss/tokens/_*/index.scss",
            "./dist/scss/tokens/_*/_index.scss"
        ],

        "./*.scss": [
            "./dist/scss/modules/*/index.scss",
            "./dist/scss/modules/*/_index.scss",
            "./dist/scss/lib/*.scss",
            "./dist/scss/lib/_*.scss",
            "./dist/scss/lib/*/index.scss",
            "./dist/scss/lib/*/_index.scss",
            "./dist/scss/lib/_*/index.scss",
            "./dist/scss/lib/_*/_index.scss"
        ],

        "./*": {

            "sass": [
                "./dist/scss/modules/*/index.scss",
                "./dist/scss/modules/*/_index.scss",
                "./dist/scss/lib/*.scss",
                "./dist/scss/lib/_*.scss",
                "./dist/scss/lib/*/index.scss",
                "./dist/scss/lib/*/_index.scss",
                "./dist/scss/lib/_*/index.scss",
                "./dist/scss/lib/_*/_index.scss"
            ],

            "types": [
                "./dist/ts/*.d.ts",
                "./dist/ts/_*.d.ts",
                "./dist/ts/*/index.d.ts",
                "./dist/ts/*/_index.d.ts",
                "./dist/ts/_*/index.d.ts",
                "./dist/ts/_*/_index.d.ts"
            ],

            "default": [
                "./dist/ts/*.js",
                "./dist/ts/_*.js",
                "./dist/ts/*/index.js",
                "./dist/ts/*/_index.js",
                "./dist/ts/_*/index.js",
                "./dist/ts/_*/_index.js"
            ]
        }
    },

    "scripts": {
        "test-bin": "node ./dist/ts/bin/index.js compile-tokens --out src/scss/templates/design-tokens/tokens/__default.scss --tokensAsDefault",

        "commit": "sh .scripts/commit.sh",

        "snap":     "build-utils snapshot",
        "snapshot": "build-utils snapshot",

        "compile": "build-utils compile",

        "test": "build-utils test",

        "doc":      "build-utils document",
        "document": "build-utils document",

        "build":       "build-utils build",
        "quick-build": "build-utils build -- --without minimize,prettify",
        
        
        "prewatch": "build-utils build -- --without minimize,prettify --starting",
        
        "watch": "run-p --silent watch:*",
            "watch:docs": "watch -p 'src/docs/**/*' -c 'build-utils document                  --watchedWatcher \"watch:docs\" --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "watch:scss": "watch -p 'src/scss/**/*' -c 'build-utils build --compile-only scss --watchedWatcher \"watch:scss\" --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
            "watch:ts":   "watch -p 'src/ts/**/*'   -c 'build-utils build --compile-only ts   --watchedWatcher \"watch:ts\"   --watchedChange --watchedFilename \"$FILENAME\" --watchedEvent \"$EVENT\"'",
        

        "package": "build-utils package",
        "dryrun": "build-utils release --dryrun --without-package snapshot,zip",

        "release": "build-utils release"
    },
    
    "dependencies": {
        "minimist": "^1.2.8",
        "sass": "^1.91.0"
    },
    "devDependencies": {
        "@maddimathon/build-utilities": "0.2.0-alpha.4",
        "@maddimathon/utility-typescript": "2.0.0-beta",
        "@types/minimist": "1.2.5",
        "@types/node": "22.15.30",
        "npm-run-all": "4.1.5",
        "typedoc": "0.28.11",
        "typescript": "5.9.2",
        "watch-cli": "0.2.3"
    },

    "peerDependencies": {
        "sass": "^1.91.0"
    },
    
    "browserslist": [
        "last 3 major versions",
        "> 0.5%",
        "not dead"
    ]
}